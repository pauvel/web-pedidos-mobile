<!-- Inicio del cuerpo -->
<section class="cuerpo">
     <div class="cuerpo-contenido">
        <div class="caja-contenido-small">
            <img src="/img/category-section/add-new.png" alt="" class="image-fit">
            <h1 class="titulo-1">Eliminar: "{{ingredient.name}}"</h1>
            <hr>
            <div class="contenido">
                <h1>Eliminar?</h1>
                <div class="caja-texto texto-plano">
                    <p class="texto-plano">Si elimina este ingrediente se eliminara de todos los productos tambien. ¿Desea continuar?</p>
                </div>
                <a id="add-button" class="green-button action-btn-form"> Si </a>
                <a href="/products/ingredients" class="red-button action-btn-form"> No </a>
            </div>
        </div> 
    </div>
</section>
{{!-- popup ELIMINAR --}}
    <div class="overlay" id="overlay">
        <div class="popup" id="popup">
            <a href="#" id="btn-cerrar-popup" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
            <img src="/img/category-section/caution.png" alt="" class="image-fit">
            <h3>¿Eliminar?</h3>
            <hr>
            <div class="contenido">
                <form action="/products/ingredients/delete/{{ingredient.id}}?_method=DELETE" method="post">
                    <input type="hidden" name="ingredient" value="{{ingredient.name}}">
                    <button  class="red-button"> Eliminar </button>
                </form>
            </div>
        </div>
    </div>
