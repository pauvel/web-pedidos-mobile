<link rel="stylesheet" href="/css/products.css">
<link rel="stylesheet" href="/css/popup.css">
<link rel="stylesheet" href="/css/table-styles.css">

    <div class="cuerpo-contenido">
        <h1>
            <i class="fas fa-info-circle"></i>  {{product.nombre}}
        </h1>
        <img src="{{product.url}}" alt="" id="formImage" class="image-product">
        <a href="/products/add/ingredient_to_product/{{product.id}}?product={{product.nombre}}&url={{product.url}}" class="blue-button"> <i class="fas fa-plus"> </i> Agregar ingredientes</a>
        <input id="file-input" type="file" name="imagefromfile" style="display: none;" accept="image/png, image/jpeg, image/jpg">
        <a class="blue-button" id="uploadFileButton">   <i class="fas fa-retweet">   </i> Cambiar imagen</a>
        <a class="delete-button"> <i class="fas fa-trash-alt"> </i> Eliminar producto</a>
        <hr>
        <form class="form" action="/products/edit/product/{{product.id}}?_method=PUT" method="post">
            <label class="titulo-3 set-block" for="">Nombre:</label>
            <input class="input-tobox set-inline-block" value="{{product.nombre}}" pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+[a-zA-Z0-9]+[a-zA-Z0-9 ]" type="text" name="nombre" id="nombre" maxlength="18" minlength="4" placeholder="Nombre del producto" required>
            <label class="titulo-3 set-block" for="">Precio Chico:</label>
            <input class="input-tobox set-inline-block" value="{{product.precioch}}"  type="number" name="precioch" id="precioch" maxlength="10" minlength="2" placeholder="Precio CH $0.00" required>
            <label class="titulo-3 set-block" for="">Precio Grande:</label>
            <input class="input-tobox set-inline-block" value="{{product.preciog}}"  type="number" name="preciog" id="preciog" maxlength="10" minlength="2" placeholder="Precio G $0.00" required>
            <input type="text" style="display: none;" value="{{product.categoria_id}}" id="categoria" name="categoria">
            <input type="text" style="display: none;" value="{{product.url}}" id="url" name="url">
            <label class="titulo-3 set-block" for="">Descripcion:</label>
            <p id="description-zone">
                <textarea class="input-tobox input-align-start set-inline-block" name="descripcion" id="descripcion" cols="30" rows="10" placeholder="Descripcion del producto" required minlength="10" maxlength="" />{{product.descripcion}}</textarea>
            </p>  
            <input type="submit" value="Guardar cambios" class="add-button">
        </form>
    </div>
    <div style="margin: 100px auto;"></div>

{{!-- Inicio Popup: Eliminar producto --}}
    <div class="overlay" id="overlay">
        <div class="popup" id="popup">
            <a href="#" id="btn-cerrar-popup" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
            <div class="titulo-2">Eliminar producto</div>
            <p id="infoForm">Si elimina este producto, desaparecera toda la informacion referente a el. ¿Desea Continuar? </p>
            <hr>
            <div class="contenido mar-lr-x10">
                <form action="/products/delete/product/{{product.id}}?_method=DELETE" method="POST">
                    <input type="text" style="display: none;" value="{{product.nombre}}" name="productName">
                    <button class="green-button"> Eliminar </button>
                </form>
            </div>
        </div>
    </div>
{{!-- Fin Popup: Eliminar producto --}}

